    margin-bottom 0px

.icon-loading
  width 8rem
  height 8rem

.min-h100
  min-height 100%

.center
  text-align center

.table
  display table
  width 100%

.table-cell
  display table-cell
  vertical-align middle

h3
  small
    font-size .85em
    margin-bottom 1px
    font-weight lighter
    clear both

.small
  font-size .6em
  line-height 18px
