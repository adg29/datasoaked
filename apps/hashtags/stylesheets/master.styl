
#wrap
  margin 0 auto
  width 100%
  figure
    -webkit-transform-style preserve-3d
    -moz-transform-style preserve-3d
    transform-style preserve-3d
    width 100%
    height 100%
    img
      max-width 100%
      display block
      position relative
      -webkit-transition -webkit-transform 0.4s
    & > div
      overflow hidden
    .tweet
      color #fff
      font-size 1.3em
      max-width 100%
      display block
      position relative
      -webkit-transition -webkit-transform 0.4s
      padding 10px
  figcaption
    &.item-time
      position absolute
      bottom 0
      right 0
      padding 7px
      background transparent
      color #ed4e6e
      font-size .8em
      line-height 10px
      height 10%
      width 30%
      opacity 100
      -webkit-backface-visibility hidden
    &.item-meta
      position absolute
      top 0
      left 0
      padding 20px
      background #2c3f52
      color #ed4e6e
      height 100%
      width 50%
      opacity 0
      -webkit-backface-visibility hidden
      -webkit-transform-origin 0 0
      -webkit-transform rotateY(-90deg)
      -webkit-transition -webkit-transform 0.4s, opacity 0.1s 0.3s
    h3
      margin 0
      padding 0
      color #fff
    span
      &:before
        content 'by '
    span.byline-twit
      &:before
        content 'via '
    a
      text-align center
      padding 5px 10px
      border-radius 2px
      display inline-block
      background #ed4e6e
      color #fff
    a.insta
      background #517fa4
    a.twit
      background #00aced
  .element
    -webkit-perspective 1700px
    -webkit-perspective-origin 0 50%

#wrapper
  margin 0 auto
  clear both
  width 90%

.container
  -webkit-transition background 0.3s
  -moz-transition background 0.3s
  transition background 0.3s
  &.paused
    -webkit-transition background 0.3s
    -moz-transition background 0.3s
    transition background 0.3s
  & > section
    p
      color #fff
      font-size 1.3em
      font-weight 300
      a
        color #fff
        font-weight 700
        &:hover
          color #0c69a4
  & > section#update-status
    text-align center

.grid-sizer
  width 20%

  #wrap
    figure
      margin 0
      position relative

#wrap figure:hover img,
#wrap figure.cs-hover img
#wrap figure:hover .tweet,
#wrap figure.cs-hover .tweet 
  -webkit-transform translateX(25%)

#wrap figure:hover figcaption.item-meta,
#wrap figure.cs-hover figcaption.item-meta
  opacity 1
  -webkit-transform rotateY(0deg)
  -webkit-transition -webkit-transform 0.4s, opacity 0.1s

.cs-style-4
  figcaption
    a
      position absolute
      bottom 20px
      right 20px

.stamp
  height 300px
  overflow hidden
  color #333
  width 306px
  height 296px
  padding 10px
  position absolute
  top 0px
  right 114px
  background #222
  color white
  -webkit-border-radius 5px
  -moz-border-radius 5px
  border-radius 5px

.loading
  height 150px
  background-color #0fb
  .tag
    color #000
    text-align center
